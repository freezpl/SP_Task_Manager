<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TaskManager.assets.styles">

    <Style x:Key="WPane" TargetType="WrapPanel">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="DarkCyan" />
    </Style>

    <Style x:Key="MainText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="MainTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="200" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="5 10 20 10" />
        <Setter Property="Foreground" Value="DarkCyan" />
    </Style>

</ResourceDictionary>